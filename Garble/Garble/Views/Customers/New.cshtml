@model Garble.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>New Customer</h2>
<br />

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group"> 
        <label for="FirstName">First Name</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="LastName">Last Name</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Zip">Zip Code</label>
        @Html.TextBoxFor(m => m.Zip, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="DayofWeek">On which day would you like your trash to be picked up?</label>
        @Html.DropDownList("PickupDay",
                    new SelectList(Enum.GetValues(typeof(DayOfWeek))),
                    "Select Pickup Day",
                    new { @class = "form-control" })
    </div>


<button type="submit" class="btn btn-primary">Save</button>

}
