@model IEnumerable<Garble.Models.PastTransaction>
@{
    ViewBag.Title = "PastTransactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Past Transactions</h2>

<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickupPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPaid)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PickupPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPaid)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PastTransactionID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PastTransactionID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PastTransactionID })
            </td>
        </tr>
    }

</table>

